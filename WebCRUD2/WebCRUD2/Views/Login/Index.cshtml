
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<div class="col-md-6 m-auto">

    <div style="display:grid;grid-template-columns:1fr 1fr;grid-template-rows:600px;grid-gap:2em">

        <div>
            <img style="width:100%" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT82L50z2IJu1PeMUxuyFLrfkXGDSfTlnZh1i5ZpUTekgrSrbwW&usqp=CAU" />
        </div>
        <div>
            <div class="form-group">
                <label>Usuario</label>
                <input type="text" class="form-control" id="txtusu" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" id="txtpass" />
            </div>
            <input type="button" class="btn btn-block btn btn-primary" value="Enviar" onclick="Enviar()"/>

            <div class="mt-3">
                <a asp-area="" asp-controller="Pais" asp-action="Inicio">
                    Registrarse Usuario
                </a>
            </div>
        </div>


    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/sweetAlert.js"></script>
<script src="~/js/validarIF.js"></script>



<script>

    function Enviar() {
        var user = document.getElementById("txtusu").value;
        var pass = document.getElementById("txtpass").value;

        alert(user);
        $.get("Login/login/?user=" + user + "&pass=" + pass, function (data) {
            if (data == "") {
                alert("Error");
            }
            else {
                alert("Correcto!");
                document.location.href = "PaginaPrincipal";
            }
        })

    }

</script>