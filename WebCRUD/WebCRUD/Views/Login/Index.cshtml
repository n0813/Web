
@{
    ViewData["Title"] = "Index";
    Layout = null;
}



    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="col-md-6 m-auto" style="position:center;">

    <div style="display:grid;grid-template-columns:1fr 1fr;grid-template-rows:600px;grid-gap:2em">

        <div>
            <img style="width:100%" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT82L50z2IJu1PeMUxuyFLrfkXGDSfTlnZh1i5ZpUTekgrSrbwW&usqp=CAU" />
        </div>
        <div>
            <div class="form-group">
                <label>Usuario</label>
                <input type="text" class="form-control" id="txtusu"/>
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" id="txtPasswoord"/>
            </div>
            <input type="button" class="btn btn-block btn btn-primary" value="Enviar" onclick="Login()"/>

            <div class="mt-3">
                <a asp-area="" asp-controller="RegistrarUsuario" asp-action="Index">
                    Registrarse Usuario
                </a>
            </div>
        </div>


    </div>

</div>



<script>

    function Login() {
        var user = document.getElementById("txtusu").value;
        var pass = document.getElementById("txtPassword").value;
        $.get("Login/login/?user=" + user + "&pass=" + pass, function (data) {

            if (data == "") {
                alert("Contrasena incorrecta");
            }
            else {
                document.location.href = "PaginaPrincipal";
            }

        })


    }

</script>


